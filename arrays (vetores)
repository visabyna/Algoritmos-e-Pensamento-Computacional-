#include <stdio.h>

int main() {
    float notas[50];     
    int quantidade;      
    float soma = 0.0;    
    float media;         
    int i;               

    printf("Digite o número de alunos (máximo 50): ");
    scanf("%d", &quantidade);

    if (quantidade < 1 || quantidade > 50) {
        printf("Quantidade inválida.\n");
        return 1;
    }

    for (i = 0; i < quantidade; i++) {
        printf("Digite a nota do aluno %d: ", i + 1);
        scanf("%f", &notas[i]);
        soma += notas[i];
    }

    media = soma / quantidade;

    printf("A média geral das notas é: %.2f\n", media);

    return 0;
}
